using System;

namespace GovernmentServicesApp
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Welcome to the UK Government Services Information App!");
            Console.WriteLine("Please select a service:");
            Console.WriteLine("1. National Health Service (NHS)");
            Console.WriteLine("2. Department for Work and Pensions (DWP)");
            Console.WriteLine("3. HM Revenue and Customs (HMRC)");
            Console.WriteLine("4. Driver and Vehicle Licensing Agency (DVLA)");
            Console.WriteLine("5. Department of Health and Social Care (DHSC)");
            Console.WriteLine("6. Home Office");
            Console.WriteLine("7. Ministry of Justice (MoJ)");
            Console.WriteLine("8. Department for Education (DfE)");
            Console.WriteLine("9. Department for Environment, Food & Rural Affairs (DEFRA)");
            Console.WriteLine("10. Department for Transport (DfT)");
            Console.WriteLine("11. Exit");
            bool running = true;

            while (running)
            {
                Console.Write("Enter your choice: ");
                string choice = Console.ReadLine();

                switch (choice)
                {
                    case "1":
                        DisplayNHSInfo();
                        break;
                    case "2":
                        DisplayDWPInfo();
                        break;
                    case "3":
                        DisplayHMRCInfo();
                        break;
                    case "4":
                        DisplayDVLAInfo();
                        break;
                    case "5":
                         Console.WriteLine("Department of Health and Social Care (DHSC): https://www.gov.uk/government/organisations/department-of-health-and-social-care");
                        break;
                    case "6":
                        Console.WriteLine("Home Office: https://www.gov.uk/government/organisations/home-office");
                        break;
                    case "7":
                        Console.WriteLine("Ministry of Justice (MoJ): https://www.gov.uk/government/organisations/ministry-of-justice");
                        break; 
                    case "8":
                        Console.WriteLine("Department for Education (DfE): https://www.gov.uk/government/organisations/department-for-education");
                        break;
                    case "9":
                        Console.WriteLine("Department for Environment, Food & Rural Affairs (DEFRA): https://www.gov.uk/government/organisations/department-for-environment-food-rural-affairs");
                        break;
                    case "10":
                        Console.WriteLine("Department for Transport (DfT): https://www.gov.uk/government/organisations/department-for-transport");
                        break;
                    case "11":
                        running = false;
                        Console.WriteLine("Thank you for using the UK Government Services Information App. Goodbye!");
                        break;           
                    default:
                        Console.WriteLine("Invalid choice. Please try again.");
                        break;
                }
            }
        }

        static void DisplayNHSInfo()
        {
            Console.WriteLine("\nNational Health Service (NHS):");
            Console.WriteLine("The NHS provides healthcare services to residents of the UK.");
            Console.WriteLine("For more information, visit: https://www.nhs.uk\n");
        }

        static void DisplayDWPInfo()
        {
            Console.WriteLine("\nDepartment for Work and Pensions (DWP):");
            Console.WriteLine("The DWP is responsible for welfare and pension policy.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/department-for-work-pensions\n");
        }

        static void DisplayHMRCInfo()
        {
            Console.WriteLine("\nHM Revenue and Customs (HMRC):");
            Console.WriteLine("HMRC is responsible for the collection of taxes.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/hm-revenue-customs\n");
        }

        static void DisplayDVLAInfo()
        {
            Console.WriteLine("\nDriver and Vehicle Licensing Agency (DVLA):");
            Console.WriteLine("The DVLA is responsible for maintaining a database of drivers and vehicles in Great Britain.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/driver-and-vehicle-licensing-agency\n");
        }

        static void DisplayHomeOfficeInfo()
        {
            Console.WriteLine("\nHome Office:");
            Console.WriteLine("The Home Office is responsible for immigration, security, and law and order.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/home-office\n");
        }

        static void DisplayMoJInfo()
        {
            Console.WriteLine("\nMinistry of Justice (MoJ):");
            Console.WriteLine("The MoJ is responsible for the justice system in England and Wales.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/ministry-of-justice\n");
        }
        static void DisplayDfEInfo()
        {
            Console.WriteLine("\nDepartment for Education (DfE):");
            Console.WriteLine("The DfE is responsible for education and children's services.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/department-for-education\n");
        }
        static void DisplayDEFRAInfo()
        {
            Console.WriteLine("\nDepartment for Environment, Food & Rural Affairs (DEFRA):");
            Console.WriteLine("DEFRA is responsible for environmental protection, food production, and rural affairs.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/department-for-environment-food-rural-affairs\n");
        }
        static void DisplayDfTInfo()
        {
            Console.WriteLine("\nDepartment for Transport (DfT):");
            Console.WriteLine("The DfT is responsible for the UK's transport infrastructure.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/department-for-transport\n");
        }
        static void DisplayDHSCInfo()
        {
            Console.WriteLine("\nDepartment of Health and Social Care (DHSC):");
            Console.WriteLine("The DHSC is responsible for health and social care policy in the UK.");
            Console.WriteLine("For more information, visit: https://www.gov.uk/government/organisations/department-of-health-and-social-care\n");    
    }
}
}
